<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>name <%= @user.name %></tr>
          <tr>introduction <%= @user.introduction %></tr>
        </tbody>
      </table>
      <div class="row"><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></div>

      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <div class="form-group">Title
          <%= f.text_field :title %>
        </div>
        <div class="form-group">Opinion
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
      <div class="col-md-8 offset-md-1"></div>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr></tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr><% @books.each do |book| %></tr>
          <tr>
            <%= link_to user_path(current_user.id) do %>
              <%= image_tag book.get_image %>
            <% end %>
          </tr>
          <tr>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </tr>
          <tr>
            <%= book.body %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
