<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>User info</h1>
<%= image_tag @user.get_profile_image %>
<h3>name <%= @user.name %></h3>
<h3>introduction <%= @user.introduction %></h3>
<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>
<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(current_user.id) do %>
      <%= image_tag book.get_image %>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
      <%= book.body %>
  </div>
<% end %>

