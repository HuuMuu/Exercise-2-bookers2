

<div class="container px-5 px-sm-0">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th><th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th><th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <l class="fas fa-user-cog"></l>
        <% end %>
      </div>



      <div>
        <%= form_with model: @book do |f| %>
          <div class="form-group">Title</div>
            <%= f.text_field :title %>
          <div class="form-group">Opinion</div>
            <%= f.text_area :body %>
          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |book| %>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
