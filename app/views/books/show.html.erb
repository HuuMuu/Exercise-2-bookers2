<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>
<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_image %>
  <%= @book.user.name %>
  <%= @book.title %>
  <%= @book.body %>
  <% if @book.user == current_user %>
    <%= link_to "edit", edit_book_path(@book.id) %>
  <% end %>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>