<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>name <%= @user.name %></tr>
          <tr>introduction <%= @user.introduction %></tr>
        </tbody>
      </table>
      <div class="row"><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></div>

      <h2 class="mt-3">New book</h2>
      <div>
        <%= form_with model: Book.new do |f| %>
          <div class="form-group">Title<%= f.text_field :title %></div>
          <div class="form-group">Opinion<%= f.text_area :body %></div>
          <div class="form-group"><%= f.submit "Create Book" %></div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
        <table class="table">
          <tbody></tbody>
          <tr>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag @book.get_image %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
             <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <tb><%= @book.body %></tb>
            <tb>
              <% if @book.user == current_user %>
                <%= link_to "edit", edit_book_path(@book.id) %>
              <% end %>
            </tb>
            <tb>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete %>
              <% end %>
            </tb>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>