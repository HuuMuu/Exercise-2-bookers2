<div class="container">
  <div class="row">
    <hi>User info</hi>
    <%= image_tag @user.get_profile_image %>
    <h3>name <%= @user.name %></h3>
    <h3>introduction <%= @user.introduction %></h3>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
    <h1>New book</h1>
    <div>
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <h1>Books</h1>
    <% @books.each do |book| %>
    <div>
      <%= link_to user_path(@user.id) do %>
        <%= image_tag book.user.get_profile_image %>
      <% end %>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      <%= book.body %>
    </div>
    <% end %>
  </div>
</div>