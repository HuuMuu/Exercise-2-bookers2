<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <%= book.title %>
  <%= book.body %>
</div>
<% end %>