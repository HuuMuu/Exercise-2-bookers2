<div class="container px5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image %>
      <table>
        <tbody>
          <tr></tr>
          <tr>name <%= @user.name %></tr>
          <tr>introduction <%= @user.introduction %></tr>
        </tbody>
      </table>
      <div class="row"><%= link_to "プロフィール編集", edit_user_path(@user.id) %></div>
    </div>

    <h2 class="mt-3">New book</h2>
    <div class="form-group">
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">Title</div>
        <%= f.text_field :title %>
        <div class="form-group">Opinion</div>
        <%= f.text_area :body %>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <% @books.each do |book| %>
          <div>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag book.user.get_profile_image %>
            <% end %>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
            <%= book.body %>
          </div>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>