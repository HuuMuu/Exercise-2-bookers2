<h1>User info</h1>
<%= image_tag @user.get_profile_image %>
<h3>name <%= @user.name %></h3>
<h3>introduction <%= @user.introduction %></h3>
<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

<h1>New book</h1>
<div>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>
</div>


<h1>User</h1>
<% @users.each do |user| %>
  <div>
      <%= image_tag user.get_profile_image %>
      <%= user.name %>
      <%= link_to 'show', user_path(user.id) %>
  </div>
<% end %>