<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
      <%= image_tag @user.get_profile_image %>
      <tr></tr>
      <tr>
        <th>name <%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction <%= @user.introduction %></th>
      </tr>
      </table>
      <div class="row">
        <%= link_to "編集", edit_user_path(current_user.id), class: "fa-thin fa-wrench" %>
      </div>

      <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>

    <div class="col-md8 offset-md-1">
      <h2>User</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th coispan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr><%= image_tag user.get_profile_image %></tr>
            <tr><%= user.name %></tr>
            <tr><%= link_to 'show', user_path(user.id)%></tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>